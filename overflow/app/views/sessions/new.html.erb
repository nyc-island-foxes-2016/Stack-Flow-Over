<h1>Log In</h1>

<% if @errors %>
<ul>
  <%@errors.each do |error| %>
  <li> <%= error %> </li>
  <% end %>
</ul>
<% end %>

<%= form_tag session_path do %>
  <fieldset>
    <div>
      <%= label_tag :name %>
      <%= text_field_tag :name %>
    </div>

    <div>
      <%= label_tag :password %>
      <%= password_field_tag :password %>
    </div>

    <%= submit_tag 'Log in' %>
  </fieldset>

<% end %>

