<h1>Registration:</h1>
<%= form_for @user do |f| %>
  <fieldset>
    <div>
      <%= f.label :name %>
      <%= f.text_field :name %>
    </div>

    <div>
      <%= f.label :password %>
      <%= f.password_field :password %>
    </div>
    <%= submit_tag 'Register' %>
  </fieldset>
<% end %>

<% if @errors %>
  <ul>
    <% @errors.each do |message| %>
      <li> <%= message %> </li>
    <% end %>
  </ul>
<% end %>
